<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    tools:context=".SellFragment">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <Button
        android:id="@+id/add_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/montserrat_bold"
        android:text="Add Image"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="85dp" />

    <Button
        android:id="@+id/upload_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/add_image"
        android:layout_alignParentRight="true"
        android:background="@drawable/custom_button"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/montserrat_bold"
        android:text="Upload" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="350dp"

                android:layout_above="@+id/textView3"
                android:layout_marginTop="150dp"
                tools:ignore="NotSibling">

                <ImageView
                    android:id="@+id/item_photo"
                    android:layout_width="450dp"
                    android:layout_height="match_parent" />
            </RelativeLayout>



            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="10pt"
                android:text="Product Details"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/plant_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:hint="Plant Name"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_input"
                android:inputType="text"
                android:fontFamily="@font/montserrat_regular"
                android:padding="10dp"
            />


        <EditText
            android:id="@+id/product_price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:hint="Price"
            android:background="@drawable/custom_input"
            android:layout_marginTop="20dp"
            android:inputType="text"
            android:fontFamily="@font/montserrat_regular"
            android:padding="10dp"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Type of Plant"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="6pt"
                android:layout_marginTop="20dp"
                />
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <RadioGroup
                android:id="@+id/radiogroup_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Common House Plant"
                    android:fontFamily="@font/montserrat_regular"></RadioButton>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flowering plant"
                    android:fontFamily="@font/montserrat_regular"></RadioButton>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Foliage Plants"
                    android:fontFamily="@font/montserrat_regular"></RadioButton>


            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Indoor palm Plant"
                android:fontFamily="@font/montserrat_regular"></RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cactus plant"
                android:fontFamily="@font/montserrat_regular"></RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Others"
                android:fontFamily="@font/montserrat_regular"></RadioButton>
        </RadioGroup>

    </RelativeLayout>
            <EditText
                android:id="@+id/product_description"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_input"
                android:ems="10"
                android:hint="Describe what are you selling and include details that can make a buyer interested"
                android:inputType="textMultiLine"
                android:padding="10dp"></EditText>
            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deal Method"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="6pt"/>

            <RadioGroup
                android:id="@+id/radiogroup_deal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Meet Up"
                    android:fontFamily="@font/montserrat_regular"></RadioButton>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivery/Mailing"
                    android:fontFamily="@font/montserrat_regular"></RadioButton>
            </RadioGroup>






        </LinearLayout>


    </RelativeLayout>

</ScrollView>

</RelativeLayout>
